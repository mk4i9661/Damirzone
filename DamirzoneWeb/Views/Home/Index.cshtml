@model System.Int32
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Damirzone";
}
@section styles
{
    <link href="@Url.Content("~/Content/home.index.css")" rel="stylesheet" type="text/css" />
}
@section scripts
{
    <script src="@Url.Content("~/Scripts/home.index.js")" type="text/javascript"></script>
    <script type="text/javascript">
        function getPath() {
            return "@Url.Action("GetImage")";
        }

        var _page;

        function getPage() {
            return _page ? _page : Index(getPath());
        }

        function showImage(img) {
            getPage().showImage(img);
        }

        function hideImage() {
            getPage().hideImage();
        }
    </script>
}
@section header
{
    <h1>Damirzone</h1>
}
<div id="images">
    @for (int i = 0; i < Model; i++)
    {
        <img src="@Url.Action("GetThumbnailImage", new { img = i })" alt = "Искусство Дамира" onclick="showImage(@i)" />
    }
</div>
<div onclick="hideImage()" id="panel">
    
</div>
