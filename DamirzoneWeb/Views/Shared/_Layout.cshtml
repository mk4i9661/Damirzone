<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="icon" type="image/png" href="@Url.Content("~/favicon.ico")" />
    @RenderSection("styles", false)
    @RenderSection("scripts", false)
</head>
<body>
    <div id="header">
        @RenderSection("header", false)
    </div>
    <div id="body">
        @RenderBody()
    </div>
    <div id="footer">
        @RenderSection("footer", false)
    </div>
</body>
</html>
